<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panuon.WPF.UI.Themes"
                    xmlns:rs="clr-namespace:Panuon.WPF.UI.Themes.Resources"
                    xmlns:irs="clr-namespace:Panuon.WPF.UI.Themes.Internal.Resources"
                    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
                    xmlns:pucore="clr-namespace:Panuon.WPF;assembly=Panuon.WPF"
                    xmlns:purs="clr-namespace:Panuon.WPF.UI.Resources;assembly=Panuon.WPF.UI"
                    xmlns:puirs="clr-namespace:Panuon.WPF.UI.Internal.Resources;assembly=Panuon.WPF.UI">
    <ResourceDictionary.MergedDictionaries>
        <pucore:SharedResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI;component/Styles/DataGridStyle.xaml" />
        <pucore:SharedResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI.Themes;component/Styles/CheckBox.xaml" />
        <pucore:SharedResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI.Themes;component/Styles/ComboBox.xaml" />
        <pucore:SharedResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI.Themes;component/Styles/TextBox.xaml" />
        <pucore:SharedResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI.Themes;component/Resources/Converters.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="DataGridCell"
           BasedOn="{StaticResource {x:Static purs:StyleKeys.DataGridCellStyle}}" />

    <Style TargetType="DataGridRow"
           BasedOn="{StaticResource {x:Static purs:StyleKeys.DataGridRowStyle}}" />

    <Style TargetType="DataGridRowHeader"
           BasedOn="{StaticResource {x:Static purs:StyleKeys.DataGridRowHeaderStyle}}" />

    <Style TargetType="DataGridColumnHeader"
           BasedOn="{StaticResource {x:Static purs:StyleKeys.DataGridColumnHeaderStyle}}" />

    <Style TargetType="DataGrid"
           BasedOn="{StaticResource {x:Static purs:StyleKeys.DataGridStyle}}">
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Background"
                Value="{DynamicResource {x:Static rs:ResourceKeys.WindowBackground}}" />
        <Setter Property="Foreground"
                Value="{DynamicResource {x:Static rs:ResourceKeys.BodyForeground}}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource {x:Static rs:ResourceKeys.InputBorderBrush}}" />
        <Setter Property="HorizontalGridLinesBrush"
                Value="{DynamicResource {x:Static rs:ResourceKeys.SeparatorBrush}}" />
        <Setter Property="VerticalGridLinesBrush"
                Value="{DynamicResource {x:Static rs:ResourceKeys.SeparatorBrush}}" />
        <Setter Property="GridLinesVisibility">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource {x:Static irs:ConverterKeys.StylistDataGridGridLinesVisibilityConverter}}"
                              ConverterParameter="Solid:Horizontal;CardSolid:None;Border:Horizontal">
                    <Binding RelativeSource="{RelativeSource Self}" />
                    <Binding Path="(local:GeneralStylist.Feature)"
                             RelativeSource="{RelativeSource Self}" />
                    <Binding Path="(local:DataGridStylist.Style)"
                             RelativeSource="{RelativeSource Self}" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
        <Setter Property="RowHeaderWidth"
                Value="0" />
        <Setter Property="Padding"
                Value="10,0" />
        <Setter Property="ColumnHeaderHeight"
                Value="40" />
        <Setter Property="BorderThickness">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource {x:Static irs:ConverterKeys.StylistThicknessConverter}}"
                              ConverterParameter="Solid:0;CardSolid:0;Border:1">
                    <Binding RelativeSource="{RelativeSource Self}" />
                    <Binding Path="(local:GeneralStylist.Feature)"
                             RelativeSource="{RelativeSource Self}" />
                    <Binding Path="(local:DataGridStylist.Style)"
                             RelativeSource="{RelativeSource Self}" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
        <Setter Property="pu:DataGridHelper.AutoGeneratedComboBoxStyle">
            <Setter.Value>
                <Style TargetType="ComboBox"
                       BasedOn="{StaticResource {x:Type ComboBox}}">
                    <Setter Property="Padding"
                            Value="2,0" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="pu:DataGridHelper.AutoGeneratedCheckBoxStyle">
            <Setter.Value>
                <Style TargetType="CheckBox"
                       BasedOn="{StaticResource {x:Type CheckBox}}">
